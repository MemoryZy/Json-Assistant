<idea-plugin>
    <actions>
        <action id="JsonAssistant.actions.JavaBeanToJson"
                class="cn.memoryzy.json.actions.JavaBeanToJsonAction">
            <keyboard-shortcut keymap="$default" first-keystroke="alt N"/>
            <keyboard-shortcut keymap="$default" first-keystroke="alt shift N"/>
        </action>

        <action id="JsonAssistant.actions.JsonToJavaBean"
                class="cn.memoryzy.json.actions.JsonToJavaBeanAction">
        </action>

        <group id="JsonAssistant.groups.JavaBeanToJson">
            <separator/>
            <reference ref="JsonAssistant.actions.JavaBeanToJson"/>
            <separator/>

            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </group>

        <group id="JsonAssistant.groups.JsonToJavaBean">
            <separator/>
            <reference ref="JsonAssistant.actions.JsonToJavaBean"/>
            <separator/>

            <add-to-group group-id="NewGroup" relative-to-action="NewFile" anchor="before"/>
        </group>
    </actions>
</idea-plugin>
